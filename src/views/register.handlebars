<link rel="stylesheet" href="/css/usersStyles.css" />
<h2>Registrate</h2>
<div class="user register" action>
    {{#if message }}
    <div class="{{message.type}}">
        <div class="title">{{message.title}}</div>
        <div class="text">{{message.text}}</div>
    </div>
    {{/if}}
    <form method="post" action="/register">
        <label for="first_name">Nombre</label>
        <input name="first_name" type="text" required pattern="^[A-Z][a-z]+( [A-Z][a-z]+)*$"/>
        <div class="invalid" title="Formato: Mmmmm Mmmmm"></div>
        <label for="last_name">Apellido</label>
        <input name="last_name" type="text" required pattern="^[A-Z][a-z]+( [A-Z][a-z]+)*$" title="Formato: Mmmmm Mmmmm"/>
        <div class="invalid" title="Formato: Mmmmm Mmmmm"></div>
        <label for="email">Correo electrónico</label>
        <input name="email" type="email" required />
        <div class="invalid" title="Correo electrónico es obligatório"></div>
        <label for="age">Edad</label>
        <input name="age" type="number" required title="Debe ser un numero entero mayor que 0"/>
        <div class="invalid" title="Debe ser un numero entero mayor que 0"></div>
        <label for="password">Contraseña</label>
        <input name="password" type="password" required pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*_=+-]).{8,120}$" title="Debe tener al entre 8 y 120 caracteres, al menos una mayúscula, una minúscula y un caracter especial."/>
        <div class="invalid" title="Debe tener al entre 8 y 120 caracteres, al menos una mayúscula, una minúscula y un caracter especial."></div>
        <input type="submit" name="" id="" value="Enviar"/>
    </form>
    <div class="login">
        <p>¿Ya tenés una cuenta?</p>
        <a href="/login">Iniciá sessión haciendo click aca</a>
    </div>
</div>