<link rel="stylesheet" href="css/chatStyles.css">
<div class="chat">
    <h3>Chat MongoDB</h3>
    <div class="chatbox" id="chatbox">
        {{#each messages}}
            <div class="message" user="{{this.user}}">
                <div class="email">
                    {{this.user}}
                </div>
                <div class="text">
                    {{this.message}}
                </div>
                <div class="date">
                    {{this.date}}
                </div>
            </div>
        {{/each}}
    </div>
    <form id="newMessage">
        <h4>Mensaje</h4>
        <textarea name="message" id="message" cols="20" rows="1"></textarea>
        <button type="submit">Enviar</button>
    </form>

</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="../scripts/chatScocketClient.js"></script>